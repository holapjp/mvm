
<%= simple_form_for(@acudiente) do |f| %>
  <%= f.error_notification %>
<div class="container">
  <div class="form-inputs">
    <div class="row">
      <div class="co-12 col-md-6">
          <%= f.input :tipo_identificacion, collection: ["T.I. - Tarjeta de Identidad", "C.C. - Cédula de Ciudadania","C.I. - Cédula de Identidad", "T.P. - Tarjeta Pasaporte", "R.C. - Registro Civil","C.E. - Cédula Extranjería"], include_blank: false  %>  
      </div>
      <div class="col-12 col-md-6">
          <%= f.input :identificacion %>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-md-6">
        <%= f.input :nombre %>
      </div>
      <div class="col-12 col-md-6">
        <%= f.input :apellido %>
      </div>  
    </div>
    <div class="row">
      <div class="col-12 col-md-6">
        <div class="form-group">
          <label for="fecha_n">Fecha de Nacimineto</label>
          <%= text_field_tag "acudiente[fecha_n]", nil ,class:"form-control" %>
        </div>
      </div>
      <div class="col-12 col-md-6">
         <%= f.input :tipo_sangre, label: "Tipo de Sangre", collection: ["O-","O+","A-","A+","B-","B+","AB-","AB+"], include_blank: false %>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-md-6">
        <%= f.input :barrio %>
      </div>
      <div class="col-12 col-md-6">
        <%= f.input :direccion %>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-md-6">
        <%= f.input :email %>
      </div>
      <div class="col-12 col-md-6">
        <%= f.input :telefono %>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-md-5">
        <%= f.input :celular %>
      </div>
      <div class="col-12 col-md-2 align-self-center">
          <%= f.input :genero, as: :radio_buttons, collection: ['Masculino',"Femenino"] %>  
      </div>
      <div class="col-12 col-md-5">
        <%= f.input :parentesco, collection: ["Padre","Madre","Hermano","Hermana","Tio","Tia","Abuela","Abuelo"], include_blank: false %>
      </div>
    </div>
  </div>
 
  <div class="form-actions">
    <%= f.button :submit, "Guardar", class: "btn btn-dark btn-lg btn-block" %>
  </div>

</div>
  
<% end %>
