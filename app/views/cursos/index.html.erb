<h1 class="jumbotron my-2 py-2 text-center">
  Cursos
    <%= link_to new_curso_path, class: "btn btn-success " do %>
      <h3 class="p-0 m-0">
        <%= fa_icon "plus" %>
      </h3>
    <% end %>
</h1>
<div class="container">
  <%= form_tag(cursos_path,method: :get) do %>
    <div class="form-row">
      <div class="col-8">
        <%= text_field_tag :term, params[:term], class:"form-control my-2", placeholder: "Buscar por: Nombre o por Cupo" %>
      </div>
      <div class="col-1">
        <button type="submit" class="btn btn-success my-2">
          <%= fa_icon "search" %>
        </button>
      </div>
    </div>
  <% end %>
</div>
<div class="table-responsive-md">
  <table class="table table-hover">
    <caption>
      <%= page_entries_info @cursos, entry_name: "Cursos" %>
    </caption>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Alumnos Matriculados</th>
        <th>Cupo</th>
        <th colspan="3">Opciones</th>
      </tr>
    </thead>
    <tbody>
      <% @cursos.each do |curso| %>
        <tr>
          <td><%= curso.nombre %></td>
          <td><%= curso.alumnos.count %></td>
          <td><%= curso.cantidad_alumno %></td>
          <td>
            <%= link_to curso, class:"btn btn-info", title:"Más información sobre el curso" do %>    
              <%= fa_icon "info-circle" %>
            <% end %>
          </td>
          <td>
            <%= link_to edit_curso_path(curso), class:"btn btn-warning text-white", title: "Actualizar información sobre el acudiente" do%>
              <%= fa_icon "edit" %>
            <% end %>
          </td>
          <td>
            <%= link_to curso, method: :delete, data: { confirm: 'Estas seguro de borrar esto?' }, class:"btn btn-danger" do %>
              <%= fa_icon "trash" %>
            <% end %>    
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="container nav justify-content-center">
  <%= paginate @cursos %>
</div>
<div class="container row mb-4">
  <div class="col"></div>
  <div class="col-5">
    <div class="btn-group">
      <%= link_to new_alumno_path, class:"btn btn-primary btn-lg", remote: true do %>
        <%= fa_icon "users", text: "Nuevo Alumno" %>
      <% end %>
      <%= link_to new_docente_path, class:"btn btn-warning btn-lg text-white" do %>
        <%= fa_icon "user", text: "Nuevo Docente"  %>
      <% end %>
    </div>
  </div>
  <div class="col"></div>
</div>